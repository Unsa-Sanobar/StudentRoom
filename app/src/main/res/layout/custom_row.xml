<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:id="@+id/rowLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       android:layout_marginTop="10dp"
       android:layout_marginStart="10dp"
       android:id="@+id/layout1"
       app:layout_constraintTop_toTopOf="parent">
       <TextView
           android:id="@+id/id_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="25dp"
           android:textColor="@color/black"
           android:layout_marginRight="20dp"
           android:text="1."

           />

       <TextView

           android:id="@+id/firstName_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Unsa"
           android:textColor="@color/black"
           android:textSize="25dp"
           />
       <TextView
           android:id="@+id/lastname_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sanobar"
           android:textSize="25dp"
           android:textColor="@color/black"
           android:layout_marginLeft="3dp"
           />

   </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout2"
    app:layout_constraintTop_toBottomOf="@id/layout1"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/0 | D/0"
        android:textSize="19dp"
        android:layout_marginStart="15dp"

        />
    <TextView
        android:id="@+id/fathername_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Javed Memon"
        android:textSize="20dp"
        android:layout_marginStart="15dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout3"
        app:layout_constraintTop_toBottomOf="@id/layout2"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester:"
            android:textSize="19dp"
            android:layout_marginStart="15dp"

            />
        <TextView
            android:id="@+id/semestertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20dp"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="20dp"
            android:text="Dept: "
            />
        <TextView
            android:id="@+id/Depttxt"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        android:text="03157224406"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>